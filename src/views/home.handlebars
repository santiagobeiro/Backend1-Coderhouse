<h1>Productos</h1>
{{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
{{else}}
    {{#if limit}}
        <p>Mostrando los primeros {{limit}} productos:</p> 
    {{/if}}
    <ul>
        {{#each limitProducts}}
            <li>
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>Código: {{this.code}}</p>
                <p>Precio: ${{this.price}}</p>
                <p>Disponible: {{#if this.status}}Sí{{else}}No{{/if}}</p>
                <p>Stock: {{this.stock}}</p>
                <p>Categoría: {{this.category}}</p>
                <p>ID: {{this.id}}</p>
                <img src="{{this.thumbnail}}" alt="{{this.thumbnail}}">
            </li>
        {{/each}}
    </ul>
{{/if}}
